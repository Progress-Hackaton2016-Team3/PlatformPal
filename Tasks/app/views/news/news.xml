<TabViewItem title="&#xf02d; News">
  <TabViewItem.view>
   <ListView items="{{ blogs }}" separatorColor="#fff" itemTap="blogItemTap">
          <ListView.itemTemplate>
             <GridLayout rows="150, *" class="news-view-item">
                <Image src="{{ img }}" row="0" />
                <GridLayout rows="auto, *" row="1" class="news-inner-grid">  
                    <Label text="{{ title }}" row="0" class="news-inner-title" textWrap="true" />
                    <Label text="{{ author }}" row="1" class="news-inner-author"/>
                </GridLayout> 
            </GridLayout> 
          </ListView.itemTemplate>
        </ListView>
  </TabViewItem.view>
</TabViewItem>