<TabViewItem title="&#xf0f3; Notifications" class="fa-6">
  <TabViewItem.view>
        <ListView items="{{ notifications }}" itemTap="notificationItemTap" separatorColor="#fff" class="notify-list-view">
          <ListView.itemTemplate>
            <GridLayout columns="30, *" class="notify-view-item">
               <Label text="&#xf003;" col="0" class="notify-view-item-icon"/>
               <Label text="{{ message }}" col="1" textWrap="true" class="notify-view-item-message"/>
            </GridLayout> 
          </ListView.itemTemplate>
        </ListView>
  </TabViewItem.view>
</TabViewItem>